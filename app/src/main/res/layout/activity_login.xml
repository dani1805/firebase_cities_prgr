<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_baseline_location_city_24" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#8BC34A"
        android:padding="10dp"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#2196F3"
        app:hintAnimationEnabled="true"
        app:hintEnabled="false"
        app:hintTextColor="#FFFFFF"
        app:passwordToggleDrawable="@android:drawable/ic_menu_view"
        app:passwordToggleTint="#2196F3">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8BC34A"
            android:ems="10"
            android:hint="Introduzca su email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#8BC34A"
        android:padding="10dp"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#2196F3"
        app:hintAnimationEnabled="true"
        app:hintEnabled="false"
        app:hintTextColor="#FFFFFF"
        app:passwordToggleDrawable="@android:drawable/ic_menu_view"
        app:passwordToggleTint="#2196F3">

        <EditText
            android:id="@+id/etKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8BC34A"
            android:ems="10"
            android:hint="Introduzca su clave"
            android:inputType="textPassword"
            android:textColor="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:padding="5dp"
            android:text="Login" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:padding="5dp"
            android:text="Register" />
    </LinearLayout>

</LinearLayout>